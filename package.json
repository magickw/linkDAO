{
  "name": "web3-marketplace",
  "version": "1.0.0",
  "description": "Decentralized Web3 marketplace platform",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "setup": "node setup-dev.js",
    "dev:monorepo": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd app/frontend && npm run dev",
    "dev:backend": "cd app/backend && npm run dev",
    "build:contracts": "cd app/contracts && npm run build",
    "build:backend": "cd app/backend && npm run build",
    "build:frontend": "cd app/frontend && npm run build",
    "test": "npm run test:contracts && npm run test:backend && npm run test:frontend",
    "test:contracts": "cd app/contracts && npm run test",
    "test:backend": "cd app/backend && npm run test",
    "test:frontend": "cd app/frontend && npm run test",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "deploy:contracts": "cd app/contracts && npm run deploy:local",
    "deploy:contracts:testnet": "cd app/contracts && npm run deploy:testnet",
    "db:studio": "cd app/backend && npm run db:studio",
    "db:push": "cd app/backend && npm run db:push",
    "db:migrate": "cd app/backend && npm run db:migrate",
    "start:services": "npm run docker:up && npm run dev",
    "clean": "npm run docker:down && docker system prune -f",
    "reset": "npm run clean && npm run setup"
  },
  "dependencies": {
    "@rainbow-me/rainbowkit": "^2.2.8",
    "@tanstack/react-query": "^5.85.5",
    "@vercel/analytics": "^1.5.0",
    "next": "^13.4.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.8.1",
    "viem": "^2.21.47",
    "wagmi": "^2.14.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.4.5",
    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "@wagmi/cli": "^2.5.1",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.2",
    "eslint": "^8.46.0",
    "eslint-config-next": "^13.4.12",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "ts-jest": "^29.4.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "npm": {
    "legacyPeerDeps": true
  }
}