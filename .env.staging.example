# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL=https://staging-api.linkdao.io
NEXT_PUBLIC_BACKEND_URL=https://staging-api.linkdao.io
BACKEND_PORT=10000
NODE_ENV=staging

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://username:password@staging-db.linkdao.io:5432/linkdao_staging
REDIS_URL=redis://staging-redis.linkdao.io:6379

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your_staging_jwt_secret_key_here
SESSION_SECRET=your_staging_session_secret_key_here
CSRF_SECRET=your_staging_csrf_secret_key_here
NEXTAUTH_SECRET=your_staging_nextauth_secret_here
NEXTAUTH_URL=https://staging.linkdao.io

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
SENTRY_DSN=https://your_sentry_dsn_for_staging
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# PAYMENT PROCESSING CONFIGURATION
# =============================================================================
X402_WEBHOOK_SECRET=your_staging_webhook_secret
X402_SUCCESS_URL=https://staging.linkdao.io/payment/success
X402_CANCEL_URL=https://staging.linkdao.io/payment/cancel
X402_ERROR_URL=https://staging.linkdao.io/payment/error

# Payment processing limits
MAX_PAYMENT_AMOUNT=10000
MIN_PAYMENT_AMOUNT=0.01
PAYMENT_TIMEOUT=300000

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://staging.linkdao.io
ENABLE_CSP=true

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
REDIS_CACHE_TTL=3600
CACHE_ENABLED=true
CACHE_MAX_SIZE=1000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_X402_PAYMENTS=true
ENABLE_FIAT_PAYMENTS=true
ENABLE_CRYPTO_PAYMENTS=true
ENABLE_ANALYTICS=true
ENABLE_DEBUG_MODE=true

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
ENABLE_MOCK_PAYMENTS=false
ENABLE_TEST_MODE=true
DEBUG_X402_PAYMENTS=true
SKIP_BLOCKCHAIN_VERIFICATION=false

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================
INFURA_PROJECT_ID=your_infura_project_id
ALCHEMY_API_KEY=your_alchemy_api_key
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key

# =============================================================================
# NOTIFICATIONS
# =============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK
EMAIL_SERVICE_API_KEY=your_email_service_api_key

# =============================================================================
# PERFORMANCE & SCALING
# =============================================================================
MAX_CONCURRENT_PAYMENTS=50
PAYMENT_PROCESSING_WORKERS=4
DATABASE_POOL_SIZE=20
ENABLE_CLUSTERING=true

# =============================================================================
# COMPLIANCE & LEGAL
# =============================================================================
ENABLE_KYC_VERIFICATION=true
ENABLE_AML_CHECKS=true
COMPLIANCE_MODE=staging
GDPR_COMPLIANCE=true