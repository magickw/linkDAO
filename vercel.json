{
  "buildCommand": "cd app/frontend && npm install --legacy-peer-deps && npm run build",
  "outputDirectory": "app/frontend/.next",
  "installCommand": "cd app/frontend && npm install --legacy-peer-deps",
  "env": {
    "NEXT_PUBLIC_API_URL": "https://api.linkdao.io",
    "NEXT_PUBLIC_BACKEND_URL": "https://api.linkdao.io",
    "NEXT_PUBLIC_WS_URL": "wss://api.linkdao.io/socket.io/",
    "NEXT_PUBLIC_BASE_RPC_URL": "https://base-mainnet.g.alchemy.com/v2/5qxkwSO4d_0qE4wjQPIrp",
    "NEXT_PUBLIC_BASE_SEPOLIA_RPC_URL": "https://base-sepolia.g.alchemy.com/v2/5qxkwSO4d_0qE4wjQPIrp",
    "NEXT_PUBLIC_POLYGON_RPC_URL": "https://polygon-mainnet.g.alchemy.com/v2/5qxkwSO4d_0qE4wjQPIrp",
    "NEXT_PUBLIC_MAINNET_RPC_URL": "https://eth-sepolia.g.alchemy.com/v2/5qxkwSO4d_0qE4wjQPIrp",
    "NEXT_PUBLIC_SEPOLIA_RPC_URL": "https://eth-sepolia.g.alchemy.com/v2/5qxkwSO4d_0qE4wjQPIrp",
    "NEXT_PUBLIC_ARBITRUM_RPC_URL": "https://arb-mainnet.g.alchemy.com/v2/5qxkwSO4d_0qE4wjQPIrp",
    "NODE_OPTIONS": "--max-old-space-size=8192"
  },
  "functions": {
    "app/frontend/api/**": {
      "memory": 1024
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://api.linkdao.io/api/:path*"
    }
  ]
}