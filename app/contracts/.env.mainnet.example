# Required for deployment
PRIVATE_KEY=your_deployer_private_key_here
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY

# Multisig addresses (CRITICAL - must be configured before mainnet)
TREASURY_ADDRESS=0x0000000000000000000000000000000000000000
EMERGENCY_MULTISIG_ADDRESS=0x0000000000000000000000000000000000000000
GOVERNANCE_MULTISIG_ADDRESS=0x0000000000000000000000000000000000000000

# Optional: Testnet configuration
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
GOERLI_RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_KEY

# Monitoring and alerting (optional but recommended)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_URL
ALERT_EMAIL=devops@linkdao.io

# Deployment configuration (optional)
GAS_PRICE=auto
GAS_LIMIT=12000000
DEPLOYMENT_CONFIRMATIONS=3

# Feature flags
VERIFY_CONTRACTS=true
ENABLE_MONITORING=true
DRY_RUN=false
