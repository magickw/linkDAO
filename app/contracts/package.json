{
  "name": "@linkdao/contracts",
  "version": "0.1.0",
  "description": "Smart contracts for LinkDAO platform",
  "private": true,
  "scripts": {
    "build": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.ts",
    "deploy:localhost": "hardhat run scripts/deploy-and-claim-ownership.ts --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy-and-claim-ownership.ts --network sepolia",
    "deploy:mainnet": "hardhat run scripts/deploy-and-claim-ownership.ts --network mainnet",
    "deploy:polygon": "hardhat run scripts/deploy-and-claim-ownership.ts --network polygon",
    "deploy:mumbai": "hardhat run scripts/deploy-and-claim-ownership.ts --network mumbai",
    "check:deployment": "hardhat run scripts/check-deployment-status.ts",
    "check:sepolia": "hardhat run scripts/check-deployment-status.ts --network sepolia",
    "check:mainnet": "hardhat run scripts/check-deployment-status.ts --network mainnet",
    "check:polygon": "hardhat run scripts/check-deployment-status.ts --network polygon",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:unit": "hardhat test test/comprehensive/UnitTests.test.ts",
    "test:integration": "hardhat test test/comprehensive/IntegrationTests.test.ts",
    "test:security": "hardhat test test/comprehensive/SecurityTests.test.ts",
    "test:gas-optimization": "REPORT_GAS=true hardhat test test/comprehensive/GasOptimizationTests.test.ts",
    "test:comprehensive": "./scripts/run-comprehensive-tests.sh",
    "test:runner": "ts-node test/comprehensive/TestRunner.ts",
    "coverage": "hardhat coverage",
    "coverage:check": "nyc check-coverage --lines 90 --functions 90 --branches 90 --statements 90",
    "clean": "hardhat clean",
    "node": "hardhat node",
    "compile": "hardhat compile",
    "size": "hardhat size-contracts",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write 'contracts/**/*.sol' 'scripts/**/*.ts' 'test/**/*.ts'",
    "analyze": "slither . --json slither-report.json || echo 'Slither not available'",
    "benchmark": "REPORT_GAS=true hardhat test --grep 'gas'",
    "validate:mainnet": "hardhat run scripts/pre-mainnet-validation.ts --network mainnet",
    "validate:sepolia": "hardhat run scripts/pre-mainnet-validation.ts --network sepolia",
    "validate:localhost": "hardhat run scripts/pre-mainnet-validation.ts --network localhost"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.6"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@typechain/ethers-v5": "^10.2.1",
    "@typechain/hardhat": "^6.1.6",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "chai": "^4.5.0",
    "dotenv": "^16.3.1",
    "hardhat": "^2.17.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "solidity-coverage": "^0.8.16",
    "typechain": "^8.3.2"
  }
}
