{
  "name": "@linkdao/contracts",
  "version": "0.1.0",
  "description": "Smart contracts for LinkDAO",
  "scripts": {
    "build": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.ts",
    "deploy:local": "node scripts/mock-deploy.cjs",
    "deploy:direct": "node scripts/direct-deploy.js",
    "deploy:baseSepolia": "hardhat --config hardhat.config.production.cjs run scripts/deploy-testnet.cjs --network baseSepolia",
    "deploy:sepolia": "hardhat --config hardhat.config.production.cjs run scripts/deploy-testnet.cjs --network sepolia",
    "deploy:base": "hardhat --config hardhat.config.production.cjs run scripts/deploy-testnet.cjs --network base",
    "test": "hardhat test",
    "coverage": "hardhat coverage"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^4.0.0",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.14",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/mocha": "^10.0.10",
    "chai": "^4.5.0",
    "hardhat": "^3.0.2",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.16",
    "typechain": "^8.3.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.6",
    "dotenv": "^16.6.1",
    "ethers": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "npm": {
    "legacyPeerDeps": true
  },
  "type": "module"
}
