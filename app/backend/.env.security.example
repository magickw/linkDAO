# Security Configuration Environment Variables
# Copy this file to .env and update with your actual values

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long
JWT_EXPIRATION=24h
REFRESH_TOKEN_EXPIRATION=7d

# Encryption Configuration
MASTER_ENCRYPTION_KEY=your-64-character-hex-master-encryption-key-for-aes-256
TOKEN_SECRET=your-token-secret-for-access-tokens

# Authentication Configuration
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000
SESSION_TIMEOUT=3600000
REQUIRE_MFA=false
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000
API_RATE_LIMIT_MAX=500
AUTH_RATE_LIMIT_MAX=10
SKIP_SUCCESSFUL_REQUESTS=true
SKIP_FAILED_REQUESTS=false

# DDoS Protection Configuration
DDOS_PROTECTION_ENABLED=true
DDOS_THRESHOLD=100
DDOS_DURATION=600000
DDOS_WHITELIST=127.0.0.1,::1
DDOS_BLACKLIST=

# Compliance Configuration
GDPR_ENABLED=true
GDPR_RETENTION_PERIOD=2555
GDPR_ANONYMIZATION_DELAY=30
GDPR_CONSENT_REQUIRED=true

CCPA_ENABLED=false
CCPA_OPT_OUT_ENABLED=true
CCPA_DISCLOSURE_REQUIRED=true

PCI_ENABLED=false
PCI_TOKENIZATION_REQUIRED=true
PCI_AUDIT_LOGGING_REQUIRED=true

# Audit Configuration
AUDIT_ENABLED=true
AUDIT_LOG_LEVEL=info
AUDIT_RETENTION_PERIOD=2555
AUDIT_IMMUTABLE_STORAGE=true
AUDIT_REAL_TIME_ALERTING=true
AUDIT_COMPLIANCE_REPORTING=true

# Vulnerability Scanning Configuration
VULNERABILITY_SCANNING_ENABLED=true
VULNERABILITY_SCAN_INTERVAL=86400000
VULNERABILITY_CRITICAL_THRESHOLD=7
VULNERABILITY_AUTO_REMEDIATION=false
VULNERABILITY_NOTIFICATION_CHANNELS=email,slack

# Data Protection Configuration
ENCRYPTION_AT_REST=true
ENCRYPTION_IN_TRANSIT=true
PII_DETECTION_ENABLED=true
DATA_CLASSIFICATION_ENABLED=true
ACCESS_LOGGING_ENABLED=true
DLP_ENABLED=true

# Key Management Configuration
KEY_ROTATION_INTERVAL=2592000000
KEY_DERIVATION_ITERATIONS=100000

# HSM Configuration (optional)
HSM_ENABLED=false
HSM_PROVIDER=local
HSM_ENDPOINT=
HSM_ACCESS_KEY=
HSM_SECRET_KEY=

# Database Security
DB_ENCRYPTION_ENABLED=true
DB_SSL_ENABLED=true
DB_SSL_REJECT_UNAUTHORIZED=true

# Network Security
HTTPS_ONLY=true
HSTS_MAX_AGE=31536000
CSP_ENABLED=true
CORS_CREDENTIALS=true

# Monitoring and Alerting
SECURITY_MONITORING_ENABLED=true
ALERT_WEBHOOK_URL=
SLACK_WEBHOOK_URL=
EMAIL_ALERTS_ENABLED=true
ALERT_EMAIL_RECIPIENTS=security@yourdomain.com

# Development/Testing (set to false in production)
SECURITY_DEBUG=false
BYPASS_RATE_LIMITS=false
MOCK_EXTERNAL_SERVICES=false