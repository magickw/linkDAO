{
  "name": "ai-content-moderation-backend",
  "version": "1.0.0",
  "description": "AI-powered content moderation system backend",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:dev": "tsx watch src/index.ts",
    "start:staging": "NODE_ENV=staging node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:deployment": "jest --testPathPattern=deployment --runInBand",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e --runInBand",
    "test:validation": "npm run test:deployment && npm run validate:deployment",
    "db:migrate": "drizzle-kit push:pg",
    "db:rollback": "drizzle-kit drop",
    "db:status": "drizzle-kit introspect:pg",
    "db:validate": "npm run validate:schema",
    "db:reset": "npm run db:drop && npm run db:migrate",
    "db:drop": "drizzle-kit drop --force",
    "db:backup": "node scripts/backup-db.js",
    "db:check": "node scripts/check-db.js",
    "redis:check": "node scripts/check-redis.js",
    "vendors:check": "node scripts/check-vendors.js",
    "validate:deployment": "node scripts/validate-deployment.js",
    "validate:schema": "node scripts/validate-schema.js",
    "health:check": "curl -f http://localhost:${PORT:-3000}/health",
    "deploy": "bash scripts/deploy.sh",
    "deploy:dev": "bash scripts/deploy.sh development",
    "deploy:staging": "bash scripts/deploy.sh staging",
    "deploy:prod": "bash scripts/deploy.sh production",
    "migrate": "bash scripts/migrate.sh",
    "migrate:up": "bash scripts/migrate.sh migrate",
    "migrate:down": "bash scripts/migrate.sh rollback",
    "migrate:status": "bash scripts/migrate.sh status",
    "backup": "bash scripts/migrate.sh backup",
    "restore": "bash scripts/migrate.sh restore",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "drizzle-orm": "^0.29.0",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "openai": "^4.20.1",
    "googleapis": "^128.0.0",
    "aws-sdk": "^2.1490.0",
    "ipfs-http-client": "^60.0.1",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.9",
    "@types/express": "^4.17.20",
    "@types/pg": "^8.10.7",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/jest": "^29.5.7",
    "@types/compression": "^1.7.5",
    "typescript": "^5.2.2",
    "tsx": "^4.1.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.52.0",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "prettier": "^3.0.3",
    "drizzle-kit": "^0.20.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}