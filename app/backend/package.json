{
  "name": "@linkdao/backend",
  "version": "0.1.0",
  "description": "Backend services for LinkDAO",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "ts-node src/index.ts",
    "simple": "ts-node src/simpleServer.ts",
    "test": "jest",
    "test:comprehensive": "jest --config jest.comprehensive.config.js --runInBand",
    "test:integration": "jest --config jest.comprehensive.config.js --testPathPattern=integration --runInBand",
    "test:adversarial": "jest --config jest.comprehensive.config.js --testPathPattern=adversarial --runInBand",
    "test:performance": "jest --config jest.comprehensive.config.js --testPathPattern=performance --runInBand",
    "test:security": "jest --config jest.comprehensive.config.js --testPathPattern=security --runInBand",
    "test:ab": "jest --config jest.comprehensive.config.js --testPathPattern=ab-testing --runInBand",
    "test:coverage": "jest --config jest.comprehensive.config.js --coverage --runInBand",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "tsx src/scripts/migrate.ts",
    "db:migrate:products": "tsx src/scripts/migrateProducts.ts",
    "db:verify:products": "tsx src/scripts/verifyProductMigration.ts",
    "db:sync": "tsx src/scripts/schemaMigration.ts",
    "db:push": "drizzle-kit push",
    "db:reset": "tsx src/scripts/resetDatabase.ts",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@pinecone-database/pinecone": "^6.1.2",
    "@types/jsonwebtoken": "^9.0.10",
    "axios": "^1.6.0",
    "bullmq": "^4.12.6",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.44.5",
    "ethers": "^6.7.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "ipfs-http-client": "58.0.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "openai": "^5.16.0",
    "pg": "^8.11.1",
    "postgres": "^3.4.3",
    "redis": "^4.6.7",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.4.5",
    "@types/pg": "^8.10.2",
    "@types/socket.io": "^3.0.1",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^8.46.0",
    "jest": "^29.6.2",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.1",
    "tsx": "^4.7.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "npm": {
    "legacyPeerDeps": true
  }
}
