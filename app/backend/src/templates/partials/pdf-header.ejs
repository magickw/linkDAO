<header class="pdf-header">
  <div class="header-container">
    <div class="logo-section">
      <div class="brand">
        <span class="brand-link">Link</span><span class="brand-dao">DAO</span>
      </div>
      <p class="tagline">Web3 Marketplace</p>
    </div>
    <div class="header-info">
      <h2 class="doc-title"><%= title %></h2>
      <p><strong><%= idLabel %> #:</strong> <%= idValue %></p>
      <p><strong>Date:</strong> <%= new Date(date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></p>
      <% if (status) { %>
        <p><strong>Status:</strong> <span class="status-badge <%= status.toLowerCase() %>"><%= status.toUpperCase() %></span></p>
      <% } %>
    </div>
  </div>
</header>

<style>
  .pdf-header {
    margin-bottom: 30px;
    border-bottom: 2px solid #2980b9;
    padding-bottom: 20px;
  }

  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .brand {
    font-size: 32px;
    font-weight: 800;
    margin: 0;
    letter-spacing: -1px;
  }

  .brand-link { color: #2980b9; }
  .brand-dao { color: #2c3e50; }

  .tagline {
    margin: 2px 0 0 0;
    color: #7f8c8d;
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 600;
  }

  .header-info {
    text-align: right;
    color: #2c3e50;
  }

  .doc-title {
    margin: 0 0 10px 0;
    font-size: 24px;
    font-weight: 700;
    color: #2c3e50;
    text-transform: uppercase;
  }

  .header-info p {
    margin: 4px 0;
    font-size: 12px;
  }

  .status-badge {
    display: inline-block;
    padding: 3px 8px;
    border-radius: 4px;
    font-weight: 700;
    font-size: 10px;
    margin-left: 5px;
  }

  .status-badge.completed, .status-badge.paid { background: #d4edda; color: #155724; }
  .status-badge.pending, .status-badge.processing { background: #fff3cd; color: #856404; }
  .status-badge.failed, .status-badge.cancelled { background: #f8d7da; color: #721c24; }
</style>