<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Receipt <%= receiptNumber %></title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    html, body { width: 100%; font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; color: #2c3e50; background: white; }
    body { padding: 40px; line-height: 1.5; }
    .container { max-width: 800px; margin: 0 auto; }
    .section { margin-bottom: 30px; }
    .section-title { font-size: 12px; font-weight: 700; color: #2980b9; text-transform: uppercase; margin-bottom: 10px; border-bottom: 1px solid #eee; padding-bottom: 5px; }
    .info-grid { display: flex; gap: 40px; margin-bottom: 30px; }
    .info-block { flex: 1; font-size: 12px; }
    .info-block strong { color: #2c3e50; display: block; margin-bottom: 5px; font-size: 13px; }
    .info-block p { color: #7f8c8d; margin: 2px 0; }
    .items-table { width: 100%; border-collapse: collapse; margin-bottom: 20px; font-size: 12px; }
    .items-table th { background: #f9f9f9; padding: 10px; text-align: left; font-weight: 700; border-bottom: 2px solid #2980b9; }
    .items-table td { padding: 10px; border-bottom: 1px solid #eee; }
    .text-right { text-align: right; }
    .text-center { text-align: center; }
    .summary-section { display: flex; justify-content: flex-end; }
    .summary-table { width: 300px; font-size: 12px; }
    .summary-row { display: flex; justify-content: space-between; padding: 8px 0; border-bottom: 1px solid #eee; }
    .summary-row.total { border-top: 2px solid #2c3e50; font-weight: 700; font-size: 14px; color: #2c3e50; margin-top: 5px; }
    .payment-badge { background: #f8f9fa; border-radius: 5px; padding: 15px; border-left: 4px solid #2980b9; }
    .payment-badge p { font-family: monospace; font-size: 10px; color: #7f8c8d; margin-top: 5px; }
  </style>
</head>
<body>
  <div class="container">
    <%- include('../partials/pdf-header', { 
      title: 'Payment Receipt', 
      idLabel: 'Receipt', 
      idValue: receiptNumber, 
      date: createdAt, 
      status: 'completed' 
    }) %>

    <div class="info-grid">
      <div class="info-block">
        <p class="section-title">Buyer Information</p>
        <strong><%= buyerInfo && buyerInfo.name ? buyerInfo.name : 'LinkDAO User' %></strong>
        <% if (buyerInfo && buyerInfo.startAddress) { %>
          <p>Wallet: <%= buyerInfo.startAddress %></p>
        <% } %>
        <p>Method: <%= (paymentDetails && paymentDetails.method) ? paymentDetails.method.toUpperCase() : 'CRYPTO' %></p>
      </div>
      <% if (buyerInfo && buyerInfo.shippingAddress) { %>
        <div class="info-block">
          <p class="section-title">Shipping Address</p>
          <div style="color: #7f8c8d;">
            <%
              const addr = buyerInfo.shippingAddress;
              if (typeof addr === 'string') {
            %>
              <%= addr %>
            <%
              } else if (typeof addr === 'object') {
            %>
              <% if (addr.name) { %><%= addr.name %><br><% } %>
              <% if (addr.street) { %><%= addr.street %><br><% } %>
              <% if (addr.city) { %><%= addr.city %>, <% if (addr.state) { %><%= addr.state %> <% } %><%= addr.postalCode || '' %><br><% } %>
              <% if (addr.country) { %><%= addr.country %><% } %>
            <% } %>
          </div>
        </div>
      <% } %>
    </div>

    <% if (items && items.length > 0) { %>
      <div class="section">
        <p class="section-title">Purchased Items</p>
        <table class="items-table">
          <thead>
            <tr>
              <th>Description</th>
              <th class="text-center">Qty</th>
              <th class="text-right">Unit Price</th>
              <th class="text-right">Total</th>
            </tr>
          </thead>
          <tbody>
            <% items.forEach(item => { %>
              <tr>
                <td><%= item.description || item.name || 'Item' %></td>
                <td class="text-center"><%= item.quantity || 1 %></td>
                <td class="text-right"><%= pricing && pricing.currency %> <%= (typeof item.price === 'number' ? item.price : parseFloat(item.price)).toFixed(2) %></td>
                <td class="text-right"><strong><%= pricing && pricing.currency %> <%= (typeof item.total === 'number' ? item.total : parseFloat(item.total)).toFixed(2) %></strong></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } %>

    <% if (pricing) { %>
      <div class="section summary-section">
        <div class="summary-table">
          <div class="summary-row">
            <span>Subtotal</span>
            <span><%= pricing.currency %> <%= parseFloat(pricing.subtotal).toFixed(2) %></span>
          </div>
          <% if (pricing.tax && parseFloat(pricing.tax) > 0) { %>
            <div class="summary-row">
              <span>Tax</span>
              <span><%= pricing.currency %> <%= parseFloat(pricing.tax).toFixed(2) %></span>
            </div>
          <% } %>
          <% if (pricing.platformFee && parseFloat(pricing.platformFee) > 0) { %>
            <div class="summary-row">
              <span>Platform Fee</span>
              <span><%= pricing.currency %> <%= parseFloat(pricing.platformFee).toFixed(2) %></span>
            </div>
          <% } %>
          <div class="summary-row total">
            <span>TOTAL PAID</span>
            <span><%= pricing.currency %> <%= parseFloat(pricing.total).toFixed(2) %></span>
          </div>
        </div>
      </div>
    <% } %>

    <% if (paymentDetails && paymentDetails.transactionHash) { %>
      <div class="section">
        <p class="section-title">On-Chain Transaction</p>
        <div class="payment-badge">
          <strong>Transaction Hash</strong>
          <p><%= paymentDetails.transactionHash %></p>
        </div>
      </div>
    <% } %>

    <%- include('../partials/pdf-footer') %>
  </div>
</body>
</html>
