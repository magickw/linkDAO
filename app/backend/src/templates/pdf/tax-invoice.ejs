<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tax Invoice <%= invoiceNumber %></title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html, body {
      width: 100%;
      height: 100%;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #333;
      background: white;
    }

    body {
      padding: 40px;
      line-height: 1.6;
    }

    .invoice-container {
      max-width: 800px;
      margin: 0 auto;
      background: white;
    }

    .invoice-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 40px;
      border-bottom: 3px solid #d32f2f;
      padding-bottom: 20px;
    }

    .company-info h1 {
      margin: 0 0 5px 0;
      color: #d32f2f;
      font-size: 32px;
      font-weight: 700;
    }

    .company-info p {
      margin: 2px 0;
      font-size: 12px;
      color: #666;
    }

    .invoice-meta {
      text-align: right;
      font-size: 13px;
    }

    .invoice-meta-item {
      display: flex;
      justify-content: flex-end;
      margin-bottom: 8px;
    }

    .invoice-meta-label {
      font-weight: 600;
      color: #333;
      width: 120px;
      text-align: right;
      margin-right: 10px;
    }

    .invoice-meta-value {
      color: #666;
    }

    .section {
      margin-bottom: 30px;
    }

    .section-title {
      font-size: 14px;
      font-weight: 700;
      color: #d32f2f;
      text-transform: uppercase;
      margin-bottom: 15px;
      padding-bottom: 10px;
      border-bottom: 2px solid #e0e0e0;
    }

    .party-section {
      display: flex;
      gap: 40px;
      margin-bottom: 30px;
    }

    .party-block {
      flex: 1;
      font-size: 12px;
    }

    .party-block p {
      margin: 5px 0;
      color: #555;
    }

    .party-block strong {
      color: #333;
      display: block;
      margin-top: 8px;
      margin-bottom: 5px;
      font-size: 13px;
    }

    .items-table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
      font-size: 12px;
    }

    .items-table thead {
      background: #f8f9fa;
      border-top: 2px solid #d32f2f;
      border-bottom: 2px solid #d32f2f;
    }

    .items-table th {
      padding: 12px;
      text-align: left;
      font-weight: 600;
      color: #333;
      border: none;
    }

    .items-table td {
      padding: 12px;
      border-bottom: 1px solid #e0e0e0;
      color: #555;
    }

    .items-table tr:last-child td {
      border-bottom: 2px solid #e0e0e0;
    }

    .items-table .text-right {
      text-align: right;
    }

    .items-table .text-center {
      text-align: center;
    }

    .summary-section {
      display: flex;
      justify-content: flex-end;
      margin-bottom: 30px;
    }

    .summary-table {
      width: 400px;
      font-size: 12px;
    }

    .summary-row {
      display: flex;
      justify-content: space-between;
      padding: 10px 0;
      border-bottom: 1px solid #e0e0e0;
    }

    .summary-row.total {
      border-top: 2px solid #d32f2f;
      border-bottom: 2px solid #d32f2f;
      padding: 12px 0;
      font-weight: 700;
      font-size: 15px;
      color: #d32f2f;
    }

    .summary-label {
      color: #555;
    }

    .summary-value {
      color: #333;
      font-weight: 500;
      text-align: right;
    }

    .tax-details {
      padding: 15px;
      background: #fff3e0;
      border-left: 4px solid #d32f2f;
      margin-bottom: 20px;
      font-size: 12px;
    }

    .tax-details p {
      margin: 5px 0;
      color: #555;
    }

    .terms-section {
      padding: 15px;
      background: #f8f9fa;
      border-radius: 5px;
      font-size: 11px;
      color: #666;
    }

    .invoice-footer {
      margin-top: 50px;
      padding-top: 20px;
      border-top: 2px solid #e0e0e0;
      text-align: center;
      font-size: 11px;
      color: #999;
    }

    .footer-text {
      margin: 8px 0;
    }

    .watermark {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) rotate(-45deg);
      font-size: 80px;
      color: rgba(211, 47, 47, 0.1);
      font-weight: 700;
      z-index: -1;
      white-space: nowrap;
    }
  </style>
</head>
<body>
  <div class="watermark">TAX INVOICE</div>

  <div class="invoice-container">
    <!-- Header -->
    <div class="invoice-header">
      <div class="company-info">
        <h1>LinkDAO</h1>
        <p>Tax Invoice</p>
      </div>
      <div class="invoice-meta">
        <div class="invoice-meta-item">
          <span class="invoice-meta-label">Invoice #:</span>
          <span class="invoice-meta-value"><strong><%= invoiceNumber %></strong></span>
        </div>
        <div class="invoice-meta-item">
          <span class="invoice-meta-label">Issue Date:</span>
          <span class="invoice-meta-value"><%= new Date(issueDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></span>
        </div>
        <% if (dueDate) { %>
          <div class="invoice-meta-item">
            <span class="invoice-meta-label">Due Date:</span>
            <span class="invoice-meta-value"><%= new Date(dueDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></span>
          </div>
        <% } %>
      </div>
    </div>

    <!-- Seller & Buyer Info -->
    <div class="section">
      <div class="party-section">
        <div class="party-block">
          <strong>SELLER / SUPPLIER</strong>
          <p>LinkDAO Marketplace</p>
          <p>Web3 Commerce Platform</p>
          <% if (sellerTaxId) { %>
            <p><strong>Tax ID:</strong> <%= sellerTaxId %></p>
          <% } %>
        </div>
        <div class="party-block">
          <strong>BUYER / CUSTOMER</strong>
          <% if (buyerTaxId) { %>
            <p><strong>Tax ID:</strong> <%= buyerTaxId %></p>
          <% } %>
          <p>Order ID: <%= orderId %></p>
        </div>
      </div>
    </div>

    <!-- Items Table -->
    <% if (items && items.length > 0) { %>
      <div class="section">
        <div class="section-title">Line Items</div>
        <table class="items-table">
          <thead>
            <tr>
              <th>Description</th>
              <th class="text-center">Qty</th>
              <th class="text-right">Unit Price</th>
              <th class="text-right">Amount</th>
              <% if (taxRate && parseFloat(taxRate) > 0) { %>
                <th class="text-right">Tax</th>
              <% } %>
            </tr>
          </thead>
          <tbody>
            <% items.forEach(item => { %>
              <tr>
                <td><%= item.description || 'Item' %></td>
                <td class="text-center"><%= item.quantity || 1 %></td>
                <td class="text-right"><%= typeof item.unitPrice === 'number' ? item.unitPrice.toFixed(8) : item.unitPrice %></td>
                <td class="text-right"><%= typeof item.amount === 'number' ? item.amount.toFixed(8) : item.amount %></td>
                <% if (taxRate && parseFloat(taxRate) > 0) { %>
                  <td class="text-right">
                    <%
                      const itemAmount = typeof item.amount === 'number' ? item.amount : parseFloat(item.amount);
                      const itemTax = itemAmount * (parseFloat(taxRate) / 100);
                    %>
                    <%= itemTax.toFixed(8) %>
                  </td>
                <% } %>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } %>

    <!-- Tax Summary -->
    <% if (taxRate && parseFloat(taxRate) > 0) { %>
      <div class="section">
        <div class="tax-details">
          <p><strong>Tax Jurisdiction:</strong> <%= taxJurisdiction || 'Global' %></p>
          <p><strong>Tax Rate:</strong> <%= taxRate %>%</p>
          <p><strong>Tax Amount:</strong> <%= typeof taxAmount === 'number' ? taxAmount.toFixed(8) : taxAmount %> <%= currency %></p>
        </div>
      </div>
    <% } %>

    <!-- Pricing Summary -->
    <div class="summary-section">
      <div class="summary-table">
        <div class="summary-row">
          <span class="summary-label">Subtotal</span>
          <span class="summary-value"><%= typeof subtotal === 'number' ? subtotal.toFixed(8) : subtotal %></span>
        </div>
        <% if (taxRate && parseFloat(taxRate) > 0) { %>
          <div class="summary-row">
            <span class="summary-label">Tax (<%= taxRate %>%)</span>
            <span class="summary-value"><%= typeof taxAmount === 'number' ? taxAmount.toFixed(8) : taxAmount %></span>
          </div>
        <% } %>
        <div class="summary-row total">
          <span class="summary-label">TOTAL AMOUNT DUE</span>
          <span class="summary-value"><%= typeof totalAmount === 'number' ? totalAmount.toFixed(8) : totalAmount %> <%= currency %></span>
        </div>
      </div>
    </div>

    <!-- Payment Terms -->
    <% if (dueDate) { %>
      <div class="section">
        <div class="section-title">Payment Terms</div>
        <div class="terms-section">
          <p><strong>Payment Due:</strong> <%= new Date(dueDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></p>
          <p style="margin-top: 10px;">Please include the invoice number in your payment reference.</p>
        </div>
      </div>
    <% } %>

    <!-- Footer -->
    <div class="invoice-footer">
      <div class="footer-text"><strong>LinkDAO Â© 2026 | Tax Invoice</strong></div>
      <div class="footer-text">This is an official tax invoice for compliance and audit purposes.</div>
      <div class="footer-text" style="margin-top: 15px; font-size: 10px; color: #bbb;">
        Generated on <%= new Date().toLocaleString('en-US') %>
      </div>
      <div class="footer-text" style="font-size: 10px; color: #bbb;">
        For 7 years retention as required by law
      </div>
    </div>
  </div>
</body>
</html>
