<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tax Invoice <%= invoiceNumber %></title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    html, body { width: 100%; font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; color: #2c3e50; background: white; }
    body { padding: 40px; line-height: 1.5; }
    .container { max-width: 800px; margin: 0 auto; }
    .section { margin-bottom: 30px; }
    .section-title { font-size: 12px; font-weight: 700; color: #d32f2f; text-transform: uppercase; margin-bottom: 10px; border-bottom: 1px solid #eee; padding-bottom: 5px; }
    .party-info { display: flex; gap: 40px; margin-bottom: 30px; }
    .party-block { flex: 1; font-size: 12px; }
    .party-block strong { color: #2c3e50; display: block; margin-bottom: 5px; font-size: 13px; }
    .party-block p { color: #7f8c8d; margin: 2px 0; }
    .items-table { width: 100%; border-collapse: collapse; margin-bottom: 20px; font-size: 12px; }
    .items-table th { background: #f9f9f9; padding: 10px; text-align: left; font-weight: 700; border-bottom: 2px solid #d32f2f; }
    .items-table td { padding: 10px; border-bottom: 1px solid #eee; }
    .text-right { text-align: right; }
    .text-center { text-align: center; }
    .summary-section { display: flex; justify-content: flex-end; }
    .summary-table { width: 300px; font-size: 12px; }
    .summary-row { display: flex; justify-content: space-between; padding: 8px 0; border-bottom: 1px solid #eee; }
    .summary-row.total { border-top: 2px solid #d32f2f; font-weight: 700; font-size: 14px; color: #d32f2f; margin-top: 5px; }
    .tax-badge { background: #fff3e0; border-radius: 5px; padding: 15px; border-left: 4px solid #d32f2f; font-size: 11px; }
    .watermark { position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%) rotate(-45deg); font-size: 80px; color: rgba(211, 47, 47, 0.05); font-weight: 700; z-index: -1; white-space: nowrap; }
  </style>
</head>
<body>
  <div class="watermark">TAX INVOICE</div>
  <div class="container">
    <%- include('../partials/pdf-header', { 
      title: 'Tax Invoice', 
      idLabel: 'Invoice', 
      idValue: invoiceNumber, 
      date: issueDate, 
      status: status || 'issued' 
    }) %>

    <div class="party-info">
      <div class="party-block">
        <p class="section-title">Seller / Supplier</p>
        <strong>LinkDAO Marketplace</strong>
        <p>Web3 Commerce Platform</p>
        <% if (sellerTaxId) { %>
          <p>Tax ID: <%= sellerTaxId %></p>
        <% } %>
      </div>
      <div class="party-block">
        <p class="section-title">Buyer / Customer</p>
        <strong>Buyer Reference</strong>
        <p>Order ID: <%= orderId %></p>
        <% if (buyerTaxId) { %>
          <p>Tax ID: <%= buyerTaxId %></p>
        <% } %>
      </div>
    </div>

    <% if (items && items.length > 0) { %>
      <div class="section">
        <table class="items-table">
          <thead>
            <tr>
              <th>Description</th>
              <th class="text-center">Qty</th>
              <th class="text-right">Unit Price</th>
              <th class="text-right">Amount</th>
            </tr>
          </thead>
          <tbody>
            <% items.forEach(item => { %>
              <tr>
                <td><%= item.description || 'Item' %></td>
                <td class="text-center"><%= item.quantity || 1 %></td>
                <td class="text-right"><%= typeof item.unitPrice === 'number' ? item.unitPrice.toFixed(2) : item.unitPrice %></td>
                <td class="text-right"><%= typeof item.amount === 'number' ? item.amount.toFixed(2) : item.amount %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } %>

    <div class="section summary-section">
      <div class="summary-table">
        <div class="summary-row">
          <span>Subtotal</span>
          <span><%= currency %> <%= typeof subtotal === 'number' ? subtotal.toFixed(2) : subtotal %></span>
        </div>
        <% if (taxRate && parseFloat(taxRate) > 0) { %>
          <div class="summary-row">
            <span>Tax (<%= taxRate %>%)</span>
            <span><%= currency %> <%= typeof taxAmount === 'number' ? taxAmount.toFixed(2) : taxAmount %></span>
          </div>
        <% } %>
        <div class="summary-row total">
          <span>TOTAL DUE</span>
          <span><%= currency %> <%= typeof totalAmount === 'number' ? totalAmount.toFixed(2) : totalAmount %></span>
        </div>
      </div>
    </div>

    <% if (taxRate && parseFloat(taxRate) > 0) { %>
      <div class="section">
        <div class="tax-badge">
          <p><strong>Tax Jurisdiction:</strong> <%= taxJurisdiction || 'Global' %></p>
          <p><strong>Tax Summary:</strong> Rated at <%= taxRate %>% total <%= currency %> <%= taxAmount %></p>
        </div>
      </div>
    <% } %>

    <%- include('../partials/pdf-footer') %>
  </div>
</body>
</html>
