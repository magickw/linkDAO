# Backend Environment Variables

# Server Configuration
PORT=3002
NODE_ENV=production

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/linkdao
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=linkdao
POSTGRES_USER=username
POSTGRES_PASSWORD=password

# Redis Configuration (for caching and queues)
REDIS_URL=redis://localhost:6379

# Blockchain Configuration
RPC_URL=https://mainnet.base.org
CHAIN_ID=8453

# Contract Addresses
PROFILE_REGISTRY_ADDRESS=0x1234567890123456789012345678901234567890
FOLLOW_MODULE_ADDRESS=0x2345678901245678901234567890123456789012
PAYMENT_ROUTER_ADDRESS=0x3456789012345678901234567890123456789012
GOVERNANCE_ADDRESS=0x4567890123456789012345678901234567890123
TIP_ROUTER_ADDRESS=0x5678901234567890123456789012345678901234
REWARD_POOL_ADDRESS=0x6789012345678901234567890123456789012345

# IPFS Configuration
IPFS_GATEWAY_URL=https://gateway.pinata.cloud/ipfs/
IPFS_API_URL=https://api.pinata.cloud
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_API_KEY=your_pinata_secret_key

# AI Configuration
OPENAI_API_KEY=your_openai_api_key_here
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=linkdao-embeddings

# Frontend URLs (comma-separated for CORS)
FRONTEND_URL=https://linkdao.vercel.app,https://www.linkdao.io

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here

# Development/Testing
ENABLE_SWAGGER=false
ENABLE_DEBUG_LOGS=false