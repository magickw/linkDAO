  "share_target": {
    "action": "/marketplace/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "video/*", "application/json"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+web3marketplace",
      "url": "/marketplace/handle?url=%s"
    },
    {
      "protocol": "ethereum",
      "url": "/marketplace/ethereum?address=%s"
    }
  ],
  "prefer_related_applications": false,
  "related_applications": [],
  "scope": "/",
  "id": "web3-marketplace-platform",
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred"
}