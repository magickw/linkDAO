{
  "name": "@linkdao/frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "build:analyze": "ANALYZE=true npm run build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__ --testNamePattern=\"(?!.*Integration|.*E2E|.*Accessibility)\"",
    "test:integration": "jest --testPathPattern=Integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:accessibility": "jest --testPathPattern=Accessibility",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:accessibility",
    "integration-test": "node scripts/integration-test.js",
    "deploy": "node scripts/deploy.js",
    "deploy:staging": "DEPLOY_ENV=staging npm run deploy",
    "deploy:production": "DEPLOY_ENV=production npm run deploy",
    "predeploy": "npm run integration-test",
    "postbuild": "npm run type-check",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@ethersproject/units": "^5.7.0",
    "@headlessui/react": "^2.2.7",
    "@heroicons/react": "^2.2.0",
    "@rainbow-me/rainbowkit": "^2.2.8",
    "@tanstack/react-query": "^5.85.6",
    "@vercel/analytics": "^1.5.0",
    "chart.js": "^4.5.0",
    "class-variance-authority": "^0.7.1",
    "critters": "^0.0.23",
    "ethers": "^5.7.2",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.542.0",
    "next": "^13.4.12",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.3.8",
    "react-hot-toast": "^2.6.0",
    "react-intersection-observer": "^9.13.1",
    "recharts": "^3.1.2",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^3.3.1",
    "viem": "^2.21.47",
    "wagmi": "^2.14.1",
    "web-vitals": "^3.5.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.8.4",
