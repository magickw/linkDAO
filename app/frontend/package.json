{
  "name": "@linkdao/frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "build:analyze": "ANALYZE=true npm run build",
    "start": "next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__/unit --testTimeout=30000",
    "test:integration": "jest --testPathPattern=__tests__/integration --testTimeout=60000",
    "test:e2e": "jest --testPathPattern=__tests__/e2e --testTimeout=120000",
    "test:performance": "jest --testPathPattern=__tests__/performance --testTimeout=90000",
    "test:accessibility": "jest --testPathPattern=__tests__/accessibility --testTimeout=60000",
    "test:realtime": "jest --testPathPattern=__tests__/realtime --testTimeout=60000",
    "test:feed": "jest --config jest.feed.config.js",
    "test:feed:unit": "jest --config jest.feed.config.js --testPathPattern=unit/Feed",
    "test:feed:integration": "jest --config jest.feed.config.js --testPathPattern=integration/Feed",
    "test:feed:performance": "jest --config jest.feed.config.js --testPathPattern=performance/Feed",
    "test:feed:watch": "jest --config jest.feed.config.js --watch",
    "test:feed:coverage": "jest --config jest.feed.config.js --coverage",
    "test:feed:runner": "ts-node src/__tests__/feed/runFeedTests.ts",
    "test:community": "jest --config jest.community.config.js",
    "test:community:unit": "jest --config jest.community.config.js --testPathPattern=unit/Community",
    "test:community:integration": "jest --config jest.community.config.js --testPathPattern=integration/Community",
    "test:community:performance": "jest --config jest.community.config.js --testPathPattern=performance/Community",
    "test:community:watch": "jest --config jest.community.config.js --watch",
    "test:community:coverage": "jest --config jest.community.config.js --coverage",
    "test:community:runner": "ts-node src/__tests__/community/CommunityTestRunner.ts",
    "test:community:all": "./scripts/run-community-tests.sh",
    "test:community:benchmark": "./scripts/run-community-tests.sh --benchmark",
    "test:community:accessibility": "./scripts/run-community-tests.sh --accessibility",
    "test:user-acceptance": "./scripts/run-user-acceptance-tests.sh",
    "test:user-acceptance:web3": "jest --testPathPattern=user-acceptance/Web3UserJourneyTests --testTimeout=300000",
    "test:user-acceptance:mobile": "jest --testPathPattern=user-acceptance/MobileCompatibilityTests --testTimeout=300000",
    "test:user-acceptance:browser": "jest --testPathPattern=user-acceptance/CrossBrowserCompatibilityTests --testTimeout=300000",
    "test:user-acceptance:performance": "jest --testPathPattern=user-acceptance/PerformanceOptimizationTests --testTimeout=300000",
    "test:user-acceptance:runner": "ts-node src/__tests__/user-acceptance/UserAcceptanceTestRunner.ts",
    "test:comprehensive": "ts-node src/__tests__/testRunner.ts",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:performance && npm run test:accessibility && npm run test:realtime",
    "test:full-suite": "npm run test:all && npm run test:user-acceptance",
    "integration-test": "node scripts/integration-test.js",
    "deploy": "node scripts/deploy.js",
    "deploy:staging": "DEPLOY_ENV=staging npm run deploy",
    "deploy:production": "DEPLOY_ENV=production npm run deploy",
    "deploy:production:enhanced": "node scripts/deploy-production.js production",
    "deploy:staging:enhanced": "node scripts/deploy-production.js staging",
    "rollback": "node scripts/rollback.js rollback production",
    "rollback:staging": "node scripts/rollback.js rollback staging",
    "rollback:history": "node scripts/rollback.js history production",
    "monitor:deployment": "node scripts/monitor-deployment.js production",
    "monitor:staging": "node scripts/monitor-deployment.js staging",
    "predeploy": "npm run integration-test",
    "postbuild": "npm run type-check",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@ethersproject/units": "^5.7.0",
    "@headlessui/react": "^2.2.7",
    "@heroicons/react": "^2.2.0",
    "@rainbow-me/rainbowkit": "^2.2.8",
    "@tanstack/react-query": "^5.85.6",
    "@types/d3": "^7.4.3",
    "@types/react-window": "^1.8.8",
    "@vercel/analytics": "^1.5.0",
    "chart.js": "^4.5.0",
    "chartjs-plugin-zoom": "^2.2.0",
    "class-variance-authority": "^0.7.1",
    "critters": "^0.0.23",
    "d3": "^7.9.0",
    "d3-sankey": "^0.12.3",
    "date-fns": "^2.30.0",
    "dompurify": "^3.0.8",
    "ethers": "^5.7.2",
    "framer-motion": "^11.0.0",
    "immer": "^10.1.3",
    "lucide-react": "^0.542.0",
    "marked": "^12.0.0",
    "next": "^15.5.4",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.3.8",
    "react-grid-layout": "^1.5.2",
    "react-hot-toast": "^2.6.0",
    "react-intersection-observer": "^9.16.0",
    "react-swipeable": "^7.0.2",
    "react-window": "^2.2.0",
    "recharts": "^3.1.2",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^3.3.1",
    "viem": "^2.21.47",
    "wagmi": "^2.14.1",
    "web-vitals": "^3.5.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@axe-core/react": "^4.8.4",
    "@storybook/addon-backgrounds": "^8.0.0",
    "@storybook/addon-controls": "^8.0.0",
    "@storybook/addon-docs": "^8.0.0",
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-interactions": "^8.0.0",
    "@storybook/addon-links": "^8.0.0",
    "@storybook/addon-viewport": "^8.0.0",
    "@storybook/nextjs": "^8.0.0",
    "@storybook/react": "^8.0.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/d3-sankey": "^0.12.4",
    "@types/dompurify": "^3.0.5",
    "@types/events": "^3.0.3",
    "@types/jest": "^29.5.14",
    "@types/marked": "^6.0.0",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^20.19.11",
    "@types/react": "18.3.24",
    "@types/react-dom": "^18.2.7",
    "@types/react-grid-layout": "^1.3.5",
    "@wagmi/cli": "^2.5.1",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.46.0",
    "eslint-config-next": "^13.4.12",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.27",
    "storybook": "^8.0.0",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.1",
    "typescript": "^5.1.6",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
