{
  "name": "linkdao-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:seller-integration": "jest --config jest.seller-integration.config.js",
    "test:seller-simple": "jest --config jest.seller-simple.config.js",
    "test:seller-e2e": "./scripts/run-seller-e2e-tests.sh",
    "test:seller-e2e:ci": "./scripts/run-seller-e2e-tests.sh --workers 2 --timeout 1200",
    "test:seller-integration:watch": "jest --config jest.seller-integration.config.js --watch",
    "test:seller-integration:coverage": "jest --config jest.seller-integration.config.js --coverage",
    "test:seller-integration:run": "node src/__tests__/integration/seller/SellerTestRunner.ts",
    "test:seller-mobile": "jest --config jest.seller-integration.config.js --testNamePattern=\"Mobile\"",
    "test:seller-cache": "jest --config jest.seller-integration.config.js --testNamePattern=\"Cache\"",
    "test:seller-performance": "jest --config jest.seller-integration.config.js --testNamePattern=\"Performance\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.59.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "next": "15.0.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "typescript": "^5.6.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2"
  }
}