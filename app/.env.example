# LinkDAO Development Environment Configuration
# Copy this file to .env and update the values for your local development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-for-development-change-in-production

# Database Configuration (Local Development)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/linkdao

# Backend Configuration
BACKEND_URL=http://localhost:10000
PORT=10000
NODE_ENV=development

# Frontend Configuration
FRONTEND_URL=http://localhost:3000,http://localhost:3001

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Blockchain Configuration
RPC_URL=http://localhost:8545
PROFILE_REGISTRY_ADDRESS=0x1234567890123456789012345678901234567890
FOLLOW_MODULE_ADDRESS=0x2345678901245678901234567890123456789012
PAYMENT_ROUTER_ADDRESS=0x3456789012345678901234567890123456789012
GOVERNANCE_ADDRESS=0x4567890123456789012345678901234567890123
TOKEN_ADDRESS=0x5678901234567890123456789012345678901234

# IPFS Configuration
IPFS_GATEWAY=http://localhost:8080
IPFS_API=http://localhost:5001

# AI/ML Configuration (Optional)
OPENAI_API_KEY=your-openai-api-key
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=linkdao

# Content Moderation API Keys (Optional)
PERSPECTIVE_API_KEY=your-perspective-api-key
GOOGLE_VISION_API_KEY=your-google-vision-api-key
GOOGLE_SAFE_BROWSING_API_KEY=your-google-safe-browsing-api-key
PHISHFORT_API_KEY=your-phishfort-api-key

# Push Notification Configuration (Optional)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# Arweave Configuration (Optional)
ARWEAVE_HOST=arweave.net
ARWEAVE_PORT=443
ARWEAVE_PROTOCOL=https

# WalletConnect Configuration
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# Explorer API (Unified Etherscan v2)
# Note: Basescan has been deprecated - Etherscan V2 API now handles all chains including Base
NEXT_PUBLIC_ETHERSCAN_API_KEY=your-etherscan-v2-api-key
# Optional: extend chain IDs to query (comma-separated). Default: 1,8453,84532,137,42161
NEXT_PUBLIC_EXPLORER_CHAIN_IDS=1,8453,84532,137,42161

# Web3 RPC URLs (Optional - fallbacks are provided)
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org
NEXT_PUBLIC_BASE_GOERLI_RPC_URL=https://goerli.base.org
NEXT_PUBLIC_ETHEREUM_RPC_URL=https://eth.llamarpc.com
NEXT_PUBLIC_POLYGON_RPC_URL=https://polygon.llamarpc.com
NEXT_PUBLIC_ARBITRUM_RPC_URL=https://arbitrum.llamarpc.com
NEXT_PUBLIC_SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/9aa3d95b3bc440fa88ea12eaa4456161
# Optional: global RPC URL for server-side rendering and build-time reads.
# If set, the frontend will use NEXT_PUBLIC_RPC_URL during SSR (recommended for
# deterministic builds). Optionally set NEXT_PUBLIC_RPC_CHAIN_ID to indicate the
# chain id for the RPC (e.g., 1 for Ethereum mainnet, 8453 for Base).
NEXT_PUBLIC_RPC_URL=
NEXT_PUBLIC_RPC_CHAIN_ID=1